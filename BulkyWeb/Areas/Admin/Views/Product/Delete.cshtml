@model Product

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">
				<div class="mb-3 row p-1">
					<label asp-for="Title" class="p-0"></label>
					<input asp-for="Title" type="text" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Description" class="p-0"></label>
					<input asp-for="Description" type="text" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="ISBN" class="p-0"></label>
					<input asp-for="ISBN" type="text" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Author" class="p-0"></label>
					<input asp-for="Author" type="text" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="ListPrice" class="p-0"></label>
					<input asp-for="ListPrice" type="number" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" type="number" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="ListPrice50" class="p-0"></label>
					<input asp-for="ListPrice50" type="number" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="ListPrice100" class="p-0"></label>
					<input asp-for="ListPrice100" type="number" class="form-control" />
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

